package com.model2.mvc.service.product.impl;

import java.util.HashMap;

import com.model2.mvc.common.SearchVO;
import com.model2.mvc.service.user.UserService;
import com.model2.mvc.service.product.dao.ProductDAO;
import com.model2.mvc.service.product.vo.ProductVO;
import com.model2.mvc.service.user.vo.UserVO;


public class ProductServiceImpl implements UserService{
	
	private ProductDAO productDAO;
	
	public ProductServiceImpl() {
		productDAO = new ProductDAO();
	}

	public void aaddProduct(ProductVO productDAO) throws Exception {
		productDAO.insertProduct(userVO);
	}

	public UserVO getUser(String userId) throws Exception {
		return productDAO.findUser(userId);
	}

	public HashMap<String,Object> getUserList(SearchVO searchVO) throws Exception {
		return productDAO.getUserList(searchVO);
	}

	public void updateUser(UserVO userVO) throws Exception {
		productDAO.updateUser(userVO);
	}

}